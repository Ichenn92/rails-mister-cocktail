<%= link_to cocktail_path(cocktail) do %>
  <div class="card-trip">

    <% if cocktail.photo.attached? %>
      <%= cl_image_tag cocktail.photo.key, crop: :fill %>
    <% else %>
      <img src= <%= "https://source.unsplash.com/400x300/?glass&alcool&#{cocktail.name}" %> />
    <% end %>

    <h2 class="card-trip-number-of-guests">
      <% rand(1..3).times do %>
        <i class="fas fa-heart"></i>
      <% end %>
    </h2>
    <div class="card-trip-infos">
      <div>
        <h2><%= cocktail.name %></h2>
        <p>Nbr ingredients: <%= cocktail.ingredients.count %></p>
      </div>
      <h2 class="card-trip-pricing">CHF ~<%= rand(10..200) %></h2>
    </div>
  </div>
<% end %>
